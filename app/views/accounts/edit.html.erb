<h1>Accounts#edit</h1>
<%= form_for(@account) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details, :size => "33x3" %>
  </div>
  <div class="field">
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </div>
  <div class="field">
    <%= f.label :allotment %><br />
    <%= f.text_field :allotment %>
  </div>
  <div class="actions">
    <%= f.submit "commit" %>
  </div>
<% end %>
