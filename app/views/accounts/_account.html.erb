<%- row_class = cycle("odd", "even") -%>
<tr id = "account_<%= account.id %>" class = "<%= row_class %>">
  <td class="details"><%= account.details %></td>
  <td class="cost"><%= number_to_currency(account.cost, :unit => account.user.unit || "$") %></td>
  <td class="allotment"><%= number_to_percentage(account.allotment, :precision => 2) %></td>
  <td class="accrued"><%= number_to_currency(account.accrued.nil? ? 0 : account.accrued, :unit => account.user.unit || "$" )%></td>
  <td class="mat_date"><%= account.maturity_date.nil? ? "" : account.maturity_date.strftime("%B %d, %Y") %></td>
  <td><%= link_to "edit", edit_account_path(account), :remote => true %>
  <%= link_to "delete", account_path(account), :method => :delete, :remote => true,
                                 :confirm => "You sure you want to delete #{account.details}",
                                 :title => "Delete #{account.details}" %></td>
  
</tr>


