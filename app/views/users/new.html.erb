<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.hidden_field :invitation_token %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :timezone %><br />
    <%= f.select :timezone, time_zone_options_for_select(selected = "UTC", priority_zones = nil, model = ::ActiveSupport::TimeZone)  %>
  </div>
  <div class="field">
    <%= f.label :daily_bank %><br />
    <%= f.text_field :daily_bank %><img src="/images/tooltip.png" title="This is the max you'd intend to spend a day"/>
  </div>
  
  <div class="actions">
    <%= f.submit "Sign up" %> or <%= link_to "Sign in!", signin_path %>
  </div>
<% end %>

