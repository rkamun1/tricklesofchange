<%- row_class = cycle("odd", "even") -%>
<tr class = "<%= row_class %>">
  <td class="date"><%= spending.spending_date %></td>
  <td class="details"><%= spending.spending_details %></td>
  <td class="amount"><%= number_to_currency(spending.spending_amount) %></td>
  <td><%= link_to "edit", edit_spending_path(spending) %>
  <%= link_to "delete", spending_path(spending), :method => :delete,
                                 :confirm => "You sure you want to delete #{spending.spending_details}",
                                 :title => "Delete #{spending.spending_details}" %></td>
  
</tr>


