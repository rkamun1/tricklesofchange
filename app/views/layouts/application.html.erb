<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta name="google-site-verification" content="qvqurkt6ctZayz37nTBk0DQ2cc5kbiRQpgq74V4vFAk" />
  <%= csrf_meta_tag %>
  <%= javascript_include_tag :defaults %>
  <!--[if IE]><script language="javascript" type="text/javascript" src="/javascripts/excanvas.js"></script><![endif]-->
  <%= render :partial => "layouts/stylesheets" %>
  <%= render :partial => "layouts/googleanalytics" if RAILS_ENV == 'production'%>
</head>
<body>
  <!--<%= render :partial => "layouts/social" %>-->
	<div class="container">
		<%= render :partial => "layouts/header" %>
      <div id = "section" class="round">
        <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
        <% end %> 
        <% if !signed_in? %>
          <div id="signupbtn">
            <%= link_to(image_tag("/images/signupbtn.png", {:alt => 'Sign Up', :class=>"signupbtn"}), join_path ) %>
          </div>  
        <% end %>
        <%= yield %>
      </div>
  	<%= render :partial => "layouts/footer" %>  
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
