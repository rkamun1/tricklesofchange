<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag :defaults %>
  <!--[if IE]><script language="javascript" type="text/javascript" src="/javascripts/excanvas.js"></script><![endif]-->
  <%= render :partial => "layouts/stylesheets" %>
  <%= render :partial => "layouts/googleanalytics" if RAILS_ENV == 'production'%>
</head>
<body>
  <div id = "social" class="round-left">
      <ul>
        <li><a href="http://twitter.com/#!/tricklesochange"><img src="/images/tweet_icon.png"></a></li>
        <li><a href="http://www.facebook.com/pages/tricklesofchangecom/140737925974767"><img src="/images/fb_icon.png"></a></li>
      </ul>
  </div>
	<div class="container">
		<%= render :partial => "layouts/header" %>
      <div id = "section" class="round">
      <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %> 
        <%= yield %>
      </div>
  	<%= render :partial => "layouts/footer" %>  
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
