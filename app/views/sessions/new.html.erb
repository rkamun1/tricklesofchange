<div id = "slideshow" class = "round">
<img src = "/images/slideshow.png"/>
</div>
<div id = "homepage">
<p>Read the <%= link_to "how it works", howitworks_path %> section to see how this tool can help you build your purchasing power</p>
  <%= render :partial => "invitations/beta_signup" %>
  
  <div id = "signin">
    <h3>Sign in</h3>
    <%= form_for(:session, :url => sessions_path) do |f| %>
      <div class="field">
        <%= f.label :email %>:<br />
        <%= f.text_field :email, :style => "width: 150px;"  %>
      </div>
      <div class="field">
        <%= f.label :password %>:<br />
        <%= f.password_field :password, :style => "width: 150px;"  %>
      </div>
      <div class="actions">
        <%= f.submit "Sign in" %>
      </div>
    <% end %>

    <p><!--New user? <%= link_to "Sign up now!", signup_path("blah") %><br/>-->
    <%= link_to 'Forgot Password?', forgot_password_path %></p>
  </div>
</div>
