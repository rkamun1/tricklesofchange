<h2>Contact tricklesofchange.com</h2>

<%= form_for @email do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <p class="contact">
    <%= f.label :topic %><br />
    <%= f.text_field :topic %>
  </p>
  <p class="contact">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p><%= f.submit %></p>
<% end %>


<p><%= link_to "Back to List", emails_path %></p>
